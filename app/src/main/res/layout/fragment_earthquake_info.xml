<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2">

        <ImageButton
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:icon = ""
            android:src="@drawable/baseline_chevron_left_24"
            tools:src="@drawable/baseline_chevron_left_24"
            android:contentDescription="go back to home page"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:text="Here you can find some information regarding earthquakes and safety regulations"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:text="You're my earthquake!"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/background_border"
        android:orientation="vertical"
        android:showDividers="middle|beginning|end"
        app:layout_constraintBottom_toTopOf="@+id/nav_view">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/filterbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:text="Filter"
                android:textColor="#000000"
                app:icon="@drawable/ic_notifications_black_24dp"
                app:iconTint="#000000" />

            <Button
                android:id="@+id/sortbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00333333"
                android:text="Sort"
                android:textColor="#000000"
                app:icon="@drawable/ic_notifications_black_24dp"
                app:iconTint="#000000" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/Earthquakeinfo1"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:src="@tools:sample/avatars" />

            <ImageButton
                android:id="@+id/Moreinfo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:icon = ""
                android:src="@drawable/baseline_keyboard_arrow_right_24"
                android:contentDescription = "see more info 1"/>


            <TextView
                android:id="@+id/infodesc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="0dp"
                android:text="Lorem Ipsum"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/author1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:drawableLeft="@drawable/ic_notifications_black_24dp"
                android:text="Lorem Ipsum + 0h" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/Earthquakeinfo2"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:src="@tools:sample/avatars" />

            <ImageButton
                android:id="@+id/Moreinfo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:src="@drawable/baseline_keyboard_arrow_right_24"
                tools:src="@drawable/baseline_keyboard_arrow_right_24"
                android:icon = ""
                android:contentDescription="see more info 2"/>

            <TextView
                android:id="@+id/infodesc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="0dp"
                android:text="Lorem Ipsum"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/author2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:drawableLeft="@drawable/ic_notifications_black_24dp"
                android:text="Lorem Ipsum + 0h" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/Earthquakeinfo3"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:src="@tools:sample/avatars" />

            <ImageButton
                android:id="@+id/Moreinfo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:src="@drawable/baseline_keyboard_arrow_right_24"
                tools:src="@drawable/baseline_keyboard_arrow_right_24"
                android:icon = ""
                android:contentDescription="See more info 3"/>

            <TextView
                android:id="@+id/infodesc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="0dp"
                android:text="Lorem Ipsum"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/author3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:drawableLeft="@drawable/ic_notifications_black_24dp"
                android:text="Lorem Ipsum + 0h" />
        </RelativeLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FD6E31"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>